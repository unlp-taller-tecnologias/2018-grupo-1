{% extends 'templates/layout.html.twig' %}

{# app/Resources/views/layout.html.twig #}
{% block head %}
	<title>Listado de {{ parametro }}</title>
{% endblock %}

{% block body %}
<div class="text-center container col-md-6 mt-3">
	<div>
		<a href="../alta/{{ parametro }}" class="btn btn-violet">Cargar nuevo {{ parametro }}</a>
	</div>
	<table class="table table-striped table-bordered">
		<thead>
			<th>Descipcion</th>
			<th>Modificar</th>
			<th>Eliminar</th>
		</thead>
		<tbody>
			{% for elemento in elementos %}
				<tr>
					<td>{{ elemento.nombre }}</td>
					<td><a href="../update/{{ elemento.id }}">Modificar</a></td>
					<td><a href="../delete/{{ elemento.id }}">Eliminar</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
