{% extends 'templates/layout.html.twig' %}

{# app/Resources/views/layout.html.twig #}
{% block head %}
	<title>Listado de {{ parametro }}</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="../css/style.css">
	<link rel="stylesheet" type="text/css" href="../css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
	<script src="js/slim.min.js"></script>
	<script src="js/popper.min.js"></script>
	<script type="text/javascript" src="js/bootstrap.min.js"></script>
{% endblock %}

{% block body %}
<div class="text-center container col-md-6 mt-3">
	<div>
		<a href="../alta/{{ parametro }}" class="btn btn-violet">Cargar nuevo {{ parametro }}</a>
	</div>
	<table class="table table-striped table-bordered">
		<thead>
			<th>Descipcion</th>
			<th>Modificar</th>
			<th>Eliminar</th>
		</thead>
		<tbody>
			{% for elemento in elementos %}
				<tr>
					<td>{{ elemento.nombre }}</td>
					<td><a href="../update/{{ elemento.id }}">Mod</a></td>
					<td><a href="../delete/{{ elemento.id }}">Elim</a></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
