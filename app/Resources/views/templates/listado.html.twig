{% extends 'templates/layout.html.twig' %}

{# app/Resources/views/layout.html.twig #}
{% block head %}
    <title>Listado de {{ parametro }}</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="text-center container col-md-6 mt-3">
    <div class="panel">
        <div class="panel-body">  
            {% set index = 1 %}
                <table class="table table-striped">
                    <thead>
                        {% if elementos[0].orden is defined %}
                            <th>Orden</th>
                        {% endif %}
                        <th>Descripcion</th>
                        <th><a class="btn btn-primary" href="/alta/{{ entidad }}"> Crear {{ parametro }} <i class="material-icons">add</i></a></th>
                    </thead>
                    <tbody>
                        {% for elemento in elementos %}
                            <tr>
                                {# <td>{{ elemento.orden }}</td> #}
                                {% if elemento.orden is defined %}
                                    <td>{{ index }}</td>
                                {% endif %}
                                <td>{{ elemento.descripcion }}</td>
                                <td><a class="btn btn-success btn-xs" href="/update/{{ entidad }}/{{ elemento.id }}"><i class="material-icons">edit</i></a>
                                <a class="btn btn-danger btn-xs" href="/delete/{{ entidad }}/{{ elemento.id }}"><i class="material-icons">delete</i></a></td>
                            </tr>
                            {% set index = index + 1%}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div> 
    </div>
{% endblock %}
