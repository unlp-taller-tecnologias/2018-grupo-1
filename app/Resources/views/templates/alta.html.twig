{% extends 'templates/layout.html.twig' %}
{% block head %}
  <title>{% if alta == 1 %}Alta de{% else %}Modificar{% endif %} {{ titulo }}</title>
{% endblock %}
{% block body %}
  <div class="text-center container col-md-10 col-lg-8 mt-5">
    <h1>{% if alta == 1 %}Alta de{% else %}Modificar{% endif %} {{ titulo }}</h1>
    <hr>
    {{ form_start(form) }}
    <div class="row">
      <div class="{% if form.orden is defined %}col-md-6{%else%}col-md-12{% endif %}">
        {%if form_errors(form.descripcion)%}
        <div class="alert alert-danger">
          {{ form_errors(form.descripcion) }}
        </div>
        {%endif%}
        {{ form_label(form.descripcion) }}
        {{ form_widget(form.descripcion, {'attr': {'class': 'form-control', 'placeholder':'Descripcion', 'autofocus':true} })}}
      </div>
      {% if form.orden is defined %}
        <div class="col-md-6">
          {%if form_errors(form.orden)%}
          <div class="alert alert-danger">
            {{ form_errors(form.orden) }}
          </div>
          {%endif%}
          {{ form_label(form.orden) }}
          {{ form_widget(form.orden, {'attr': {'class': 'form-control', 'placeholder':'Numero de orden', 'min':'1', 'max':'100'} })}}
        </div>
      {% endif %}
    </div>
    <hr>
    <div class="row justify-content-center">
      <div class="col-md-3 col-sm-4 col-4">
        <a class="btn btn-volver" href="/listar/{{entidad}}" onclick="return confirm('Los datos se perderÃ¡n, seguro que desea volver?')"><i class="material-icons align-bottom">keyboard_backspace</i>Volver</a>
      </div>
      <div class="col-md-3 col-sm-4 col-4">
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}
