{% extends 'templates/layout.html.twig' %}
{% block head %}
  <title>Usuarix</title>
{% endblock %}
{% block body %}
<div class="text-center container col-md-10 col-lg-8 mt-5">
  <h1>Usuario</h1>
  <div class="row justify-content-center mt-3">
    <div class="col-md-6">
      <div class="table-responsive-lg">
        <table class="table table-light">
          <tbody>
            <tr>
              <th>Nombre</th>
              <td>{{ usuario.nombre }}</td>
            </tr>
            <tr>
              <th>Apellido</th>
              <td>{{ usuario.apellido }}</td>
            </tr>
            <tr>
              <th>Dni</th>
              <td>{{ usuario.username }}</td>
            </tr>
            <tr>
              <th>Profesión</th>
              <td>{{ usuario.profesion.descripcion }}</td>
            </tr>
            <tr>
              <th>Administrador</th>
              <td>{% if usuario.esAdmin %}Sí{% else %}No{% endif %}</td>
            </tr>
          </tbody>
        </table>
      </div>
        <div class="row justify-content-center">
          <div class="col-md-3 col-sm-4 col-4">
            <a class="btn btn-volver" href="{{ path('usuario_index')}}"><i class="material-icons align-bottom">keyboard_backspace</i>Volver</a>
          </div>
          <div class="col-md-3 col-sm-4 col-4">
            <a class="btn btn-violet btn-block" href="{{ path('usuario_edit', { 'id': usuario.id }) }}">Editar</a>
          </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
