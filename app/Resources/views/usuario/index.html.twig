{% extends 'templates/layout.html.twig' %}
{% block head %}
  <title>Lista de usuarixs</title>
{% endblock %}
{% block body %}
  <div class="text-center container col-md-10 col-lg-8 mt-5">
    <h2>Panel de Usuarixs</h2>
  	<hr>
    {%for flash_message in app.session.flashbag.get('notice') %}
  		<p class="alert alert-success">{{flash_message}}</p>
  	{%endfor%}
    <div class="panel">
      <div class="panel-body">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>Dni</th>
              <th>Admin</th>
              <th><a class="btn btn-primary" href="/register/">Nuevx usuarix</a></th>
            </tr>
          </thead>
          <tbody>
            {% for usuario in usuarios %}
              <tr>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.apellido }}</td>
                <td>{{ usuario.username }}</td>
                <td>{% if usuario.esAdmin %}Si{% else %}No{% endif %}</td>
                <td>
                  <a class="btn btn-info btn-xs" href="/profile/show/{{ usuario.id }}"><i class="material-icons">remove_red_eye</i></a>
                  <a class="btn btn-success btn-xs" href="/profile/edit/{{ usuario.id }}"><i class="material-icons btn-xs">edit</i></a>
                  <a class="btn btn-danger btn-xs" href="/profile/delete/{{ usuario.id }}"><i class="material-icons">delete</i></a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
{% endblock %}
