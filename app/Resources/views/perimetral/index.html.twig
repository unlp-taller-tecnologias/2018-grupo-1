{% extends 'templates/layout.html.twig' %}
{% block title %}Perimetrales{% endblock %}
{% block body %}

<div class="text-center container col-md-6 mt-5">
  <h2>Expedientes con {{titulo}}</h2>
  <hr>
  {% if perimetrales is empty %}
  <div class="alert alert-warning" role="alert">
    <h5>No hay nada para mostrar</h5>
  </div>
  {% else %}
  <table class="table table-striped table-bordered">
		<thead>
      <tr>
        <th>#Expediente</th>
        <th>Vencimiento</th>
        <th>Victima</th>
        <th>Accion</th>
      </tr>
		</thead>
		<tbody>
      {% for perimetral in perimetrales %}
      <tr>
        <td>{{ perimetral.nroExp }}</td>
        <td>{{ perimetral.vencimiento|date("d/m/Y")}}</td>
        <td>{{ perimetral.nombre }}</td>
        <td><a class="btn btn-success" href="{{ path('perimetral_resolver', { 'id': perimetral.id, 'metodo': metodo }) }}">Resolver</td>
      </tr>
      {% endfor %}
		</tbody>
	</table>
  {% endif %}
</div>
{% endblock %}
