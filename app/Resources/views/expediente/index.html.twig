{% extends 'templates/layout.html.twig' %}

{% block body %}
<script>
document.getElementById("uno").onclick = function(){
  if (document.getElementById("dos").disabled){
    document.getElementById("dos").disabled = false
  }else{
    document.getElementById("dos").disabled = true
  }
}
</script>


<div class="text-center container col-md-10 col-lg-8 mt-5">
  <h2>Lista de expedientes</h2>
  <hr>
  <br>
{{ form_start(form) }}
<div class="row mt-3 mb-2 justify-content-center">
  <div class="col-12 col-sm-5 col-md-5 col-lg-5 mt-2">
    {{ form_label(form.nroExp) }}
    {{ form_widget(form.nroExp) }}
    {%if form_errors(form.nroExp)%}
    <div class="alert alert-danger">
      {{ form_errors(form.nroExp) }}
    </div>
    {%endif%}
  </div>
  <div class="col-12 col-sm-5 col-md-5 col-lg-5 mt-2">
    {{ form_row(form.nombreApellido) }}
  </div>
  <div class="col-12 col-sm-2 col-md-2 col-lg-2 mt-2 justify-content-center d-flex align-items-end">
    {{ form_row(form.buscar) }}
  </div>
</div>
{{ form_end(form) }}

  <hr>
  {% if expedientes %}
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Numero expediente</th>
          <th>Fecha</th>
          <th>Entrevistadores</th>
          <th>Victima</th>
          <th><a class="btn btn-primary" href="{{ path('expediente_new') }}">Nuevo expediente</a></th>
        </tr>
      </thead>
      <tbody>
        {% for expediente in expedientes %}
        <tr>
          <td>{{ expediente.nroExp }}</td>
          <td>{% if expediente.fecha %}{{ expediente.fecha|date('Y-m-d') }}{% endif %}</td>
          <td>{% for user in expediente.usuarios %}{{user.nombre}} {{user.apellido}} {% endfor %} </td>
          <td>{{expediente.victima.nombre}} {{ expediente.victima.apellido }}</td>
          <td>
              <a class="btn btn-info btn-xs" href="{{ path('expediente_show', { 'id': expediente.id }) }}">Ver</a>
              <a class="btn btn-success btn-xs" href="{{ path('expediente_edit', { 'id': expediente.id }) }}">Editar</a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

    <!-- Paginacion -->
    {% if maxPages > 1 %}
      <ul class="pagination">
        {% if thisPage > 1 %}
        <li class="page-item" >
          <a class="page-link" href="{{ path('expediente_index', {currentPage: thisPage-1 < 1 ? 1 : thisPage-1}) }}">«</a>
        </li>
        {% endif %}

        {# Render each page number #}
        {% for i in 1..maxPages %}
        <li class="page-item">
          <a class="page-link" href="{{ path('expediente_index', {currentPage: i}) }}">{{ i }}</a>
        </li>
        {% endfor %}

        {# `»` arrow #}
        {% if thisPage < maxPages %}
        <li class="page-item">
          <a class="page-link" href="{{ path('expediente_index', {currentPage: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">»</a>
        </li>
        {% endif %}
      </ul>
    {% endif %}
  {% else %}
    <div class="alert alert-warning" role="alert">
      <p>No hay expedientes para mostrar</p>
    </div>
  {% endif %}

</div>
{% endblock %}
