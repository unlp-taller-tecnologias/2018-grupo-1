                  <div class="row justify-content-center">
                    <div class="col-md-8">
                      <div class="col-md-12">
                        <table class="table table-striped table-bordered">
                          <thead>
                            <tr>
                              {% set num = 1 %}
                              {% for tel in expediente.victima.telefonos %}
                                <th>Telefono {{ num }}</th>
                              {% set num = num + 1 %}
                              {% endfor %}
                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              {% for tel in expediente.victima.telefonos %}
                                <td> {{ tel.numero }} {{ tel.numero }} </td>
                              {% endfor %}
                            </tr>
                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                  {% else %}
                  <div class="row justify-content-center">
                    <p>No posee</p>
                  </div>
                  {% endif %}
