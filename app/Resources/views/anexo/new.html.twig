{% extends 'templates/layout.html.twig' %}

{% block body %}
{{ form_start(form) }}
<div class="text-center container col-md-8 mt-5 border-violet card">
  <h1 class="mt-2 mb-2">Nuevo anexo</h1>
  <hr>

    <div class="input-group mt-2">
      <div class="input-group-prepend">
        {{ form_label(form.path, null, {'label_attr': {'class': 'input-group-text'}}) }}
      </div>
      {{ form_widget(form.path, {'attr': {'class': 'btn btn-outline-gray'}}) }}

      <div class="input-group-prepend">
