{% extends 'templates/layout.html.twig' %}

{% block body %}
    <h1>Evaluacionriesgo</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evaluacionRiesgo.id }}</td>
            </tr>
            <tr>
                <th>Cohabitacion</th>
                <td>{% if evaluacionRiesgo.cohabitacion %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Tiempo vinculo</th>
                <td>{{ evaluacionRiesgo.cantidadTiempoVinculo }} {{ evaluacionRiesgo.unidadTiempoVinculo }}</td>
            </tr>
            <tr>
                <th>Fecha de inicio</th>
                <td>{% if evaluacionRiesgo.fechaInicio %}{{ evaluacionRiesgo.fechaInicio|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Fecha del último episodio</th>
                <td>{% if evaluacionRiesgo.fechaUltimoEpisodio %}{{ evaluacionRiesgo.fechaUltimoEpisodio|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Vínculo</th>
                <td>{{ evaluacionRiesgo.vinculo }}</td>
            </tr>
            <tr>
                <th>Tiempo de maltrato</th>
                <td>{{ evaluacionRiesgo.cantidadTiempoMaltrato }}{{ evaluacionRiesgo.unidadTiempoMaltrato }}</td>
            </tr>
            <tr>
                <th>Descripción del último episodio de violencia</th>
                <td>{{ evaluacionRiesgo.descripcionUltimoEpisodio }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('evaluacionriesgo_index', { 'id': evaluacionRiesgo.victima.expediente.id }) }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('evaluacionriesgo_edit', { 'id': evaluacionRiesgo.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
