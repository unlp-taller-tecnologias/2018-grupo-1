{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hogar</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hogar.id }}</td>
            </tr>
            <tr>
                <th>Ingreso</th>
                <td>{% if hogar.ingreso %}{{ hogar.ingreso|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Egreso</th>
                <td>{% if hogar.egreso %}{{ hogar.egreso|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('hogar_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('hogar_edit', { 'id': hogar.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
