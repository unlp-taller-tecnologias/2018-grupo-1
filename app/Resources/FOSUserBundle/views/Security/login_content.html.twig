{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="text-center container col-md-4 mt-5">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="row">
            <div class="col-md-3">
                <label for="username">DNI</label>
            </div>
            <div class="">
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username"/>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-md-3">
                <label for="password">Contraseña</label>
            </div>
            <div class="">
                <input class="form-control" type="password" id="password" name="_password" placeholder="" required="required" autocomplete="current-password" />
            </div>
        </div>
        <br>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">Recuérdame</label>
        <br>
        <input class="btn btn-violet" type="submit" id="_submit" name="_submit" value="Iniciar sesión" />

    </form>
</div>
